
int main() {
    int rows;

    std::cout << "Enter the number of rows: ";
    std::cin >> rows;

    //// Outer loop for number of rows
    for (int i = rows; i >= 1; --i) {
        //// Inner loop for printing spaces
        for (int j = 0; j < rows - i; ++j)
            std::cout << " ";

        //// Inner loop for printing stars
        for (int k = 0; k < 2 * i - 1; ++k)
            std::cout << "*";

        std::cout << std::endl;
    }

    return 0;
}